<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/toolbar_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户密码修改"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- 退出按钮 -->
        <!-- <TextView
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@android:color/transparent" />-->
    </LinearLayout>

    <!-- 用户密码修改表单 -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingLeft="24dp"
        android:paddingTop="40dp"
        android:paddingRight="24dp"
        android:stretchColumns="1"
        tools:context="com.bysj.yrj.PassRepairActivity">

        <!-- 标题 -->
        <!--        <TableRow>
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:gravity="center"
                        android:layout_marginTop="24dp"
                        android:text="用户密码修改"
                        android:textColor="#003087"
                        android:textSize="30sp" />
                </TableRow>-->

        <!-- 原密码 -->
        <TableRow android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原密码："
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/paeditpass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp">

                <requestFocus />
            </EditText>
        </TableRow>

        <!-- 新密码 -->
        <TableRow android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/repairnumtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码："
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/paeditpass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </TableRow>

        <!-- 重复密码 -->
        <TableRow android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码重复："
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/paeditpass3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </TableRow>

        <!-- 按钮 -->
        <TableRow android:layout_marginTop="40dp">

            <Button
                android:id="@+id/psbutsave"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="#3B4E87"
                android:padding="4dp"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/psbutres"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#3B4E87"
                android:padding="4dp"
                android:text="重置"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>